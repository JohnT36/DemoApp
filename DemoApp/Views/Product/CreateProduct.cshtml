@model Product

<!DOCTYPE html>

<html>

    <head>


        <link rel="stylesheet" href="~/css/StyleSheet1.css"/>

    </head>


    <body>

        <h2>Creating a New Product?</h2>
        

        @using (Html.BeginForm("InsertProductToDatabase", "Product", "Post"))
{
    <input asp-for="ProductID" type="hidden" value="@Model.ProductID" />
    <label asp-for="Name" class="control-label">Name of Dish</label>
    <input type="text" name="Name" class="form-control" value="" />
    <label asp-for="Price" class="control-label">Price of Dish</label>
    <input type="number" step="0.01" name="Price" class="form-control" />
    <div class="form-group">
        <label for="">Select a Category</label>
        <select class="form-control" name="CategoryID" value="@Model.CategoryID">
            @foreach (var cat in @Model.Categories )
            {
                <option value="@cat.CategoryID"> @cat.Name</option>
            }
        </select>
    </div>
    <label asp-for="Url" class="control-label">URL</label>
    <input type="text" name="Url" class="form-control" value="" />
    <label asp-for="Ingredients" class="control-label">Ingredients</label>
    <input type="text" name="Ingredients" class="form-control" value="" />
    <br/>
    
    <input type="submit" value="Create Product" class="btn btn-primary" />
}











    </body>
</html>