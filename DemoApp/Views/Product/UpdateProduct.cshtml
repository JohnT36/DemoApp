@model Product

<h2>Update @Model.Name</h2>


            @using (Html.BeginForm("UpdateProductToDatabase", "Product", "Post"))
{
    <input asp-for="ProductID" type="hidden" value="@Model.ProductID"  />
    <label asp-for="Name" class="control-label">Name of Dish</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" required="" />
    <label asp-for="Price" class="control-label">Price of Dish</label>
    <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" required=""/>    
    <label asp-for="Url" class="control-label">URL</label>
    <input type="text" name="Url" class="form-control" value="@Model.Url" />
    <label asp-for="Ingredients" class="control-label">Ingredients</label>
    <input type="text" name="Ingredients" class="form-control" value="@Model.Ingredients" />
    <br />
    
    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
    <br />
    <input type="submit" value="Update Product" class="btn btn-primary" />
}

@section Styles {
    <link rel="stylesheet" href="~/css/StyleSheet1.css" />
}